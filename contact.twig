{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    <div class="global">
        <!--header-->
        <div class="top">
            <div class="container">
                <div class="row">
                    <article class="span12">
                        <div class="row">
                            <article class="span6">
                                {{widget('profile', 'address', { 'profileType':'address', 'address':'profile'})|raw}}
                            </article>
                            <article class="span6">
                                {{widget('profile', 'phone', { 'profileType':'phone', 'phone':'(800) 2345-6789'})|raw}}
                            </article>
                        </div>
                    </article>
                </div>
            </div>
        </div>
        <!--header-->
        <header>
            <div class="header">
                <div class="container">
                    <div class="row">
                        <article class="span12">
                            {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                        </article>
                    </div>
                </div>
            </div>
        </header>
        <div class="navigation">
            <div class="container">
                <div class="row">
                    <article class="span12">
                        {{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
                    </article>
                </div>
            </div>
        </div>
        <!--content-->
        <div class="contentInner">
            <div class="container">
                <div class="row">
                    <section class="span12">

                        {{widget('content', 'title1', {content: '<h2>Contact us</h2>', lines: 'all'})|raw}}                                
                        {{widget('map', 'map', {'height': '540', 'zoom': '15', 'address': 'profile'})|raw}}
                        {{widget('space', 'space', {'height': '30'})|raw}}

                        <div class="row">
                            <article class="span4">
                                
                                {{widget('content', 'title2', {content: '<h2>Addresses</h2>', lines: 'all'})|raw}}
                                {{widget('content', 'text1', {content: '<p class="color">Address:</p>', lines: 'all'})|raw}}
                                {{widget('profile', 'address', { 'profileType':'address', 'address':'profile'})|raw}}

                                {{widget('content', 'text2', {content: '<p class="color">Phone:</p>', lines: 'all'})|raw}}
                                {{widget('content', 'text3', {content: '+1 800 559 6580<br />+1 800 603 6035', lines: 'all'})|raw}}
                                
                            </article>
                            <article class="span8">
                                
                                {{widget('content', 'title3', {content: '<h2>Contact form</h2>', lines: 'all'})|raw}}
                                {{zone('main')|raw}}

                            </article>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <!--footer-->
        <footer>
            <div class="container">
                <div class="row">
                    <section class="span12">
                        {{widget('companyname', 'companyname', {"business": "Building the pyramids"})|raw}}
                        {{widget('profile', 'copyright', { 'profileType':'copyright', 'copyright':'Â© Copyright 2014'})|raw}}
                        {{widget('space', 'space', {'height': '30'})|raw}}
                    </section>
                </div>
            </div>
        </footer>
    </div>    
</div>

{% endblock %}